{
    "compilerOptions": {
        "outDir": "dist",
        "target": "ES2017",
        "module": "commonjs",
        "sourceMap": true,
        "declaration": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "lib": ["ES2017"]
    },
    "include": [
        "src/**/*"
    ],
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strict": true,
}
